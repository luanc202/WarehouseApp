<%= form_with model: Book.new do | f | %>
  <%= f.label :title, 'Título' %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :author, 'Autora' %>
  <%= f.text_field :author %>
  <br/>
  <%= f.label :publication_year, 'Ano de publicação' %>
  <%= f.text_field :publication_year %>
  <br/>
  <%= f.label :abstract, 'Resumo' %>
  <%= f.text_area :abstract %>
  <br/>
  <%= f.label :genre, 'Gênero' %>
  <%= f.text_field :genre %>
  <br/>
  <%= f.submit 'Enviar' %>
<% end %>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>">
    <%= value %>
  </div>
<% end %>