<%= form_with(model: movie) do |form| %>
  <% if movie.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :release_year, style: "display: block" %>
    <%= form.number_field :release_year %>
  </div>

  <div>
    <%= form.label :synopsis, style: "display: block" %>
    <%= form.text_field :synopsis %>
  </div>

  <div>
    <%= form.label :origin_country, style: "display: block" %>
    <%= form.text_field :origin_country %>
  </div>

  <div>
    <%= form.label :length, style: "display: block" %>
    <%= form.number_field :length %>
  </div>

  <div>
    <%= form.label :director, style: "display: block" %>
    <%= form.collection_select :director_id, Director.order(:name), :id, :name %>
  </div>

  <div>
    <%= form.label :genre, style: "display: block" %>
    <%= form.collection_select :movie_genre_id, MovieGenre.order(:name), :id, :name %>
  </div>

  <div>
    <%= form.label :released, "Is the movie released?" %>
    <%= form.check_box :released, style: "display: block" %>
  </div>

  <div>
    <%= form.label :draft, "Is this movie still a draft?" %>
    <%= form.check_box :draft, style: "display: block" %>
  </div>

  <div>
    <%= form.label :image_url, style: "display: block" %>
    <%= form.text_field :image_url %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
