<h1>Registro de tipo de receita</h1>

<% if flash[:notice] %>
  <div style='border: solid 1px black;text-color:blue;width:fit-content'>
  <%= flash[:notice] %>
  </div>
<% end %>

<%= form_with model: @recipe_type do | f | %>
  <div>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.submit 'Salvar' %>
  </div>
<% end %>